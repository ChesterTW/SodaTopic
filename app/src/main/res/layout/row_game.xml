<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="326dp"
        android:layout_height="135dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="326:135"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/game_row" />

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="23dp"
        android:letterSpacing="0.05"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="休闲赚" />

    <TextView
        android:id="@+id/gameDescribe"
        android:layout_width="183dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.05"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/gameTitle"
        app:layout_constraintTop_toBottomOf="@id/gameTitle"
        tools:text="轻松赚轻松玩爽爽大家一起轻松爽赚钱拿紅包" />


    <ImageView
        android:id="@+id/iconMember"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gameDescribe"
        app:layout_constraintTop_toBottomOf="@id/gameDescribe"
        app:srcCompat="@drawable/game_icon_member" />

    <TextView
        android:id="@+id/gameMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:shadowColor="#26ffffff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:text="9999"
        android:textColor="#666666"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconMember"
        app:layout_constraintTop_toBottomOf="@id/gameDescribe" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gameImage"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintDimensionRatio="109:135"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:shapeAppearanceOverlay="@style/LeftCorner8DpImage" />

    <Button
        android:id="@+id/button"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingStart="8dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="8dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="去玩玩"
        android:textAlignment="center"
        android:textColor="#A31387"
        android:textColorHighlight="#A31387"
        android:textColorHint="#A31387"
        android:textColorLink="#A31387"
        android:textSize="12sp"
        app:icon="@drawable/game_row_icon_rightarrow"
        app:iconGravity="textEnd"
        app:iconPadding="4dp"
        app:iconSize="6dp"
        app:iconTint="#A31387"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:strokeColor="#A31387"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>